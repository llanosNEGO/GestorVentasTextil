@model proyectoFinal.Models.Cliente;

<div class="form-container">
    <h2>Nuevo Cliente</h2>
    <form asp-controller="Cliente" asp-action="Nuevo" method="post">
        <div class="form-group">
            <label>Nombre CLiente</label>
            <input asp-for="nombreCliente" class="form-control" />
            <span asp-validation-for="nombreCliente" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Telefono</label>
            <input asp-for="telefono" class="form-control" />
            <span asp-validation-for="telefono" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="email"type="text" class="form-control" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
        <div class="form-actions">
            <button class="btn btn-primary">Guardar</button>
            <a asp-controller="Cliente" asp-action="Lista" class="btn btn-warning">Volver</a>
        </div>
    </form>
</div>
