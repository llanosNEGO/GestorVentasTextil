@model IEnumerable<proyectoFinal.Models.ComprasProveedor>

@{
    ViewData["Title"] = "Lista de Compras";
}


<h2>Lista Compras</h2>

<p>
    <a asp-controller="Compra" asp-action="Nuevo" class="btn btn-primary m-3">
        Nuevo
    </a>
</p>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Proveedor</th>
            <th>Total</th>
            <th>Medio Pago</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr>
                <td>@venta.idCompraProveedor</td>
                <td>@venta.fecha_registro.ToString()</td>
                <td>@venta.proveedor?.nombreEmpresa</td>
                <td>@venta.total.ToString("0.00")</td>
                <td>@venta.medioPago?.nombre</td>
                <td>@(venta.estado ? "Activa" : "Anulada")</td>
                <td>
                    <a asp-action="Detalle" asp-controller="Compra" asp-route-id="@venta.idCompraProveedor" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> Ver Detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

