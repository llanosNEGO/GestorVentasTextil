@model proyectoFinal.Models.Producto;

<div class="form-container">
    <h2>Nuevo Producto</h2>
    <form asp-controller="Producto" asp-action="Nuevo" method="post">
        <div class="form-group">
            <label>Nombre Producto</label>            
            <input asp-for="nombreProducto" class="form-control" />
            <span asp-validation-for="nombreProducto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Descripcion Producto</label>
            <input asp-for="descripcionProducto" class="form-control" />
            <span asp-validation-for="descripcionProducto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Precio Producto</label>
            <input asp-for="precioProducto" step="0.01" type="number"  class="form-control" />
            <span asp-validation-for="precioProducto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Stock</label>
            <input asp-for="stock" step="0" type="number" class="form-control" />
            <span asp-validation-for="stock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Categoria</label>
            <select asp-for="idCategoria" asp-items="@ViewBag.Categorias"
                    class="form-control">
                <option value="">-- Seleccione Categoría --</option>
            </select>
            <span asp-validation-for="idCategoria" class="text-danger"></span>
        </div>
        <div class="form-actions">
            <button class="btn btn-primary">Guardar</button>
            <a asp-controller="Producto" asp-action="Lista" class="btn btn-warning">Volver</a>
        </div>
    </form>
</div>
