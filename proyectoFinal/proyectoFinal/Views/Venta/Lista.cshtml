@model IEnumerable<proyectoFinal.Models.Venta>

@{
    ViewData["Title"] = "Lista de Ventas";
}


<h2>Lista Ventas</h2>

<p>
    <a asp-controller="Venta" asp-action="Nuevo" class="btn btn-primary m-3">
        Nuevo
    </a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Total</th>
            <th>Medio Pago</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr>
                <td>@venta.idVenta</td>
                <td>@venta.fecha_registro.ToString("dd/MM/yyyy")</td>
                <td>@venta.cliente?.nombreCliente</td>
                <td>@venta.total.ToString("0.00")</td>
                <td>@venta.medioPago?.nombre</td>
                <td>@venta.estado </td>
                <td>
                    <a asp-action="Detalle" asp-controller="Venta" asp-route-id="@venta.idVenta" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> Ver Detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

