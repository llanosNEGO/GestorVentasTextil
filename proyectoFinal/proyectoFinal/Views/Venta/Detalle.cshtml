@model proyectoFinal.Models.Venta

@{

    <style>
        /* Estilos generales para el tema azul noche */


        .card {
            background-color: #0b2956; /* Azul más claro para las tarjetas */
            color: #ffffff; /* Texto blanco */
            border: 1px solid #3949ab;
            border-radius: 0.5rem;
        }

        .card-header {
            background-color: #0b2956; /* Azul un poco más oscuro para los encabezados */
            color: #ffffff;
            border-bottom: 1px solid #3949ab;
        }

        table {
            background-color: #0b2956;
            color: #ffffff;
        }

        thead {
            background-color: #283593;
        }

        tr {
            border-bottom: 1px solid #3949ab;
        }

        th, td {
            color: #ffffff;
        }

        .btn-secondary {
            background-color: #5c6bc0;
            border-color: #5c6bc0;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #3949ab;
                border-color: #3949ab;
            }

        .btn-danger {
            background-color: #d32f2f;
            border-color: #d32f2f;
        }

        .form-control {
            background-color: #3949ab;
            color: #ffffff;
            border: 1px solid #5c6bc0;
        }

            .form-control:read-only {
                background-color: #283593;
            }

        /* Estilos para los select */
        .producto-select {
            background-color: #3949ab;
            color: #ffffff;
        }

        /* Estilos para validación */
        .text-danger {
            color: #ff8a80 !important;
        }
    </style>
}

    <h1 class="mt-4">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-header">
            <h4>Información General</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID Venta:</dt>
                <dd class="col-sm-9">@Model.idVenta</dd>

                <dt class="col-sm-3">Fecha:</dt>
                <dd class="col-sm-9">@Model.fecha_registro.ToString()</dd>

                <dt class="col-sm-3">Cliente:</dt>
                <dd class="col-sm-9">@Model.cliente?.nombreCliente</dd>

                <dt class="col-sm-3">Medio de Pago:</dt>
                <dd class="col-sm-9">@Model.medioPago?.nombre</dd>

                <dt class="col-sm-3">Total:</dt>
                <dd class="col-sm-9">@Model.total</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">@Model.estado </dd>
            </dl>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h4>Productos Vendidos</h4>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detalle in Model.detalles)
                    {
                        <tr>
                            <td>@detalle.Producto?.nombreProducto</td>
                            <td>@detalle.cantidad</td>
                            <td>@detalle.precio_unitario</td>
                            <td>@detalle.subtotal</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Lista" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a la lista
        </a>
    </div>
