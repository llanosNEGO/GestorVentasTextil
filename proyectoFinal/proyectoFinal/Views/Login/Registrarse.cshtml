@model proyectoFinal.ViewM.RegistroUsuarioVM;

<!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewData["Title"] - Registro</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        Registrarse
                    </div>
                    <div class="card-body">
                        <form asp-controller="Login" asp-action="Registrarse" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Nombre Completo" required asp-for="nombreUsuario" />
                            <input class="form-control mb-3" type="text" placeholder="email" required asp-for="email" />
                            <input class="form-control mb-3" type="date" placeholder="Fecha Registro" required asp-for="fecha_registro" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="password" />
                            <input class="form-control mb-3" type="password" placeholder="Repita Contraseña" required asp-for="confirmarpassword" />
                            <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Registrarse</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"] ;
                                </div>
                            }
                        ¿Ya tienes cuenta? <a asp-controller="Login" asp-action="Login">Inicio Sesion</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>